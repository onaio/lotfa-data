{
    "label": "Government Buildings - UNAMA",
    "source": {
        "type": "geojson",
        "data": "https://raw.githubusercontent.com/onaio/lotfa-data/master/infrastructure/govt-building/data/kbl_hrt_govt.geojson",
        "join": [
            "GlobalID",
            "GlobalID"
        ],
        "minzoom": 4
    },
    "type": "symbol",
    "minzoom": 0,
    "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "layout": {
        "text-size": 12,
        "text-optional": true,
        "text-field": "{NAME}",
        "text-offset": [
            1,
            2.2
        ],
        "icon-ignore-placement": false,
        "icon-image": "govt-off",
        "icon-allow-overlap": false
    },
    "categories": {
        "breaks": "no",
        "label": ["Government Buildings"],
        "color": ["#000000"]
    },
    "popup": {
        "body": " <p style=text-align:left;><b>Type:</b> {{TYPE}}<br><b>Name:</b>{{NAME}}<span style=float:right;>"
    },
    "visible": false,
    "credit": "<i>Zoom in to see more facilities</i> ",
    "category": "Infrastructure"
}