{
    "label": "Health Facilities - UNAMA",
    "source": {
        "type": "geojson",
        "data": "https://raw.githubusercontent.com/onaio/lotfa-data/master/infrastructure/health-facilities/data/kbl_hrt_health.geojson",
        "join": [
            "NAME",
            "NAME"
        ],
        "minzoom": 4
    },
    "type": "symbol",
    "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "layout": {
        "text-size": 12,
        "text-optional": true,
        "text-field": "{NAME}",
        "text-offset": [
            0,
            2
        ],
        "icon-image": "hospital",
        "icon-allow-overlap": true
    },
    "categories": {
        "breaks": "no",
        "label": ["Health Facilites"],
        "color": ["#add8e6"]
    },
    "popup": {
        "body": " <p style=text-align:left;><b>Type:</b> {{TYPE}}<br><b>Name:</b>{{NAME}}<span style=float:right;>"
    
    },
    "visible": false,
    "credit": "<i>Zoom in to see more facilities</i> ",
    "category": "Infrastructure"
}