{
    "label": "Health Care Centres - MoIA",
    "source": {
        "type": "geojson",
        "data": "data/healthcare_centres.geojson",
        "join": [
            "facility_number",
            "facility_number"
        ],
        "minzoom": 4
    },
    "type": "symbol",
    "minzoom": 0,
    "location": {
        "zoom": 10.695873279884117,
        "center": {
            "lng": 69.13155473084771,
            "lat": 34.50960383103761
        }
    },
    "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "layout": {
        "text-size": 12,
        "text-field": "{facility_name}",
        "text-offset": [
            0,
            2
        ],
        "icon-image": "hospital-red",
        "icon-allow-overlap": true
    },
    "categories": {
        "breaks": "no",
        "label": [
            "Health Centres"
        ],
        "color": [
            "#D50B0B"
        ]
    },
    "popup": {
        "body": " <p style=text-align:left;><b>Type:</b> {{facility_type}}<br><b>Name:</b>{{facility_name}}<span style=float:right;>"
    },
    "visible": false,
    "credit": "<i>Zoom in to see more facilities</i> ",
    "category": "Infrastructure"
}