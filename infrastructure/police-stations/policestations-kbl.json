{
    "label": "PD Stations - UNAMA",
    "source": {
        "type": "geojson",
        "data": "https://raw.githubusercontent.com/onaio/lotfa-data/master/infrastructure/police-stations/data/kbl_hrt_pol.geojson",
        "join": [
            "GlobalID",
            "GlobalID"
        ],
        "minzoom": 4
    },
    "type": "symbol",
    "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "layout": {
        "text-size": 14,
        "text-field": "{ABBR}",
        "text-offset": [
            0,
            1.1
        ],
        "icon-image": "police-station-red",
        "icon-allow-overlap": true
    },
    "categories": {
        "breaks": "no",
        "label": ["Police Stations"],
        "color": ["#EB1A1A"]
    },
    "popup": {
        "body": " <p style=text-align:left;><b>Type:</b> {{TYPE}}<br><b>Name:</b> {{NAME}}<span style=float:right;>"
    },
    "visible": false,
    "credit": "<i>Zoom in to see more facilities</i> ",
    "category": "Infrastructure"
}